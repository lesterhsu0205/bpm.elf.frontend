{
  "name": "非工作日上版",
  "tickets": [
    {
      "title": "資管人力安排",
      "inputs": [
        {
          "type": "text",
          "label": "收件者",
          "key": "receiver"
        },
        {
          "type": "text",
          "label": "單位(部門或團隊)",
          "key": "team"
        },
        {
          "type": "text",
          "label": "執行日期",
          "key": "excution_date_time"
        },
        {
          "type": "text",
          "label": "Artifact Name",
          "key": "artifact"
        },
        {
          "type": "textarea",
          "label": "資訊單位PRD上版彙總表",
          "key": "delpoyment_summary_table"
        },
        {
          "type": "textarea",
          "label": "過版單據",
          "key": "ticket"
        },
        {
          "type": "description",
          "label": "需求說明",
          "key": "apply-non-working-day-deploy_description",
          "template": "Hi ${receiver},\n \n${team} 於 ${excution_date_time} 安排 ${artifact} 過版，需申請非工作時間上版\n \n資訊單位PRD上版彙總表 \n${delpoyment_summary_table}\n\n過版單據\n${ticket}\n\n業管同意信會後補\n \n \n再請協助"
        }
      ]
    }
  ]
}
