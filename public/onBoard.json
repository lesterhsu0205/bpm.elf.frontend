{
  "tickets": [
    {
      "title": "基本資料",
      "inputs": [
        {
          "type": "select",
          "label": "處別",
          "key": "division",
          "options": [
            { "value": "核心系統處", "text": "核心系統處" },
            { "value": "業務系統處", "text": "業務系統處" }
          ]
        },
        {
          "type": "select",
          "label": "部門",
          "key": "department",
          "options": [
            { "value": "系統整合應用部", "text": "系統整合應用部" },
            { "value": "營運支援系統部", "text": "營運支援系統部" },
            { "value": "台幣存匯系統部", "text": "台幣存匯系統部" },
            { "value": "台幣共用系統部", "text": "台幣共用系統部" }
          ]
        },
        { "type": "text", "label": "員工編號", "key": "staffId" },
        { "type": "text", "label": "英文名", "key": "engName" },
        { "type": "text", "label": "中文名", "key": "chiName" }
      ]
    },
    {
      "title": "設備",
      "inputs": [
        {
          "type": "select",
          "label": "申請項目",
          "key": "device",
          "options": [
            { "value": "螢幕", "text": "螢幕" },
            { "value": "筆記型電腦", "text": "筆記型電腦" }
          ]
        },
        {
          "type": "description",
          "label": "需求說明",
          "key": "apply_device_description",
          "template": "[需求說明]\n${division} ${department} 新進同仁 ${staffId} ${engName} ${chiName} 新人到職申請 ${device}\n\n[執行單位]\n問管暨IDC作業管理部"
        }
      ]
    }
  ]
}
