{
    "manifest_version": 3,
    "name": "BPM 開單小幫手 1.0.0",
    "version": "1.0.0",
    "icons": {
        "48": "magician-hat.png"
    },
    "action": {
        "default_icon": "magician-hat.png",
        "default_title": "BPM 開單小幫手 1.0.0"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "windows"
    ],
    "sandbox": {
        "pages": [
            "window.html"
        ]
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self';",
        "sandbox": "sandbox allow-scripts allow-forms; script-src 'self' 'unsafe-eval'; object-src 'self';"
    }
}
